<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/skeletonLooking"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:background="@drawable/rounded_corner_white"
    android:padding="20dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <sarzhane.e.stopfundwar_android.util.SkeletonLoadingView
        android:id="@+id/ivBrand"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/rounded_corner_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <sarzhane.e.stopfundwar_android.util.SkeletonLoadingView
        android:id="@+id/tvBrandName"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/space_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrand"
        app:layout_constraintTop_toTopOf="@+id/ivBrand"
        tools:background="@drawable/rounded_corner_grey"
        tools:textColor="@color/orange" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_normal"
        android:layout_marginStart="@dimen/space_normal"
        android:fontFamily="@font/roboto500"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvBrandName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBrand"
        app:layout_constraintTop_toBottomOf="@+id/ivBrand" />

</androidx.constraintlayout.widget.ConstraintLayout>

