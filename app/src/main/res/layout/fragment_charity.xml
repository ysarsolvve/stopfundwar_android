<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:padding="@dimen/space_normal"
    tools:context=".presentation.charity.view.CharityFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Charity for Ukraine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fistCharity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivFirstCharity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/first_charity"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleFirstCharity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Come back alive"
            android:layout_marginStart="@dimen/space_normal"
            app:layout_constraintStart_toEndOf="@id/ivFirstCharity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescFirstCharity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_normal"
            android:text="Support Ukrainian army with vehicles"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFirstCharity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/secondCharity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/fistCharity"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivSecondCharity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/second_charity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleSecondCharity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Army SOS"
            android:layout_marginStart="@dimen/space_normal"
            app:layout_constraintStart_toEndOf="@id/ivSecondCharity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescSecondCharity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/space_normal"
            android:text="Support Ukrainian Defenders of Freedom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivSecondCharity"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/thirdCharity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/secondCharity"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivThirdCharity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/third_charity"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleThirdCharity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="With Ukraine"
            android:layout_marginStart="@dimen/space_normal"
            app:layout_constraintStart_toEndOf="@id/ivThirdCharity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescThirdCharity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_normal"
            android:text="The official fundraising effort by Embassy of Ukraine to the UK"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivThirdCharity" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourthCharity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/thirdCharity"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivFourthCharity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fourth_charity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitleFourthCharity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Armed Forces of Ukraine"
            android:layout_marginStart="@dimen/space_normal"
            app:layout_constraintStart_toEndOf="@id/ivFourthCharity"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescFourthCharity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/space_normal"
            android:text="Help directly to Armed Forces of Ukraine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivFourthCharity"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>