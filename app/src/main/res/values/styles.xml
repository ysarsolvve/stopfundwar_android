<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splash_name">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="menu_title">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="charity_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/raleway900</item>
    </style>
    <style name="charity_description">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/raleway600</item>
    </style>
    <style name="SearchStyle">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:hint">@string/hint_search_query</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textColorHint</item>
    </style>
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:fontFamily">@font/roboto500</item>
    </style>
    <style name="CustomRedChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_red_background_color</item>
        <item name="android:textColor">@color/chip_red_text_color</item>
        <item name="checkedIconTint">@color/chip_red_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:fontFamily">@font/roboto500</item>
    </style>
    <style name="CustomOrangeChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_orange_background_color</item>
        <item name="android:textColor">@color/chip_orange_text_color</item>
        <item name="checkedIconTint">@color/chip_orange_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:fontFamily">@font/roboto500</item>
    </style>
    <style name="CustomGreenChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_green_background_color</item>
        <item name="android:textColor">@color/chip_green_text_color</item>
        <item name="checkedIconTint">@color/chip_green_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="android:fontFamily">@font/roboto500</item>
    </style>
    <style name="Widget.IndicatorFastScroll.FastScroller" parent="android:Widget">
        <item name="fastScrollerIconSize">20dp</item>
        <item name="fastScrollerIconColor">?android:textColorPrimary</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="fastScrollerTextPadding">@dimen/fast_scroller_default_text_padding</item>
    </style>

    <style name="Widget.IndicatorFastScroll.FastScrollerThumb" parent="android:Widget">
        <item name="fastScrollerIconSize">24dp</item>
        <item name="fastScrollerThumbColor">?colorPrimary</item>
        <item name="fastScrollerIconColor">?android:textColorPrimaryInverse</item>
        <item name="android:textAppearance">?android:textAppearance</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>
</resources>