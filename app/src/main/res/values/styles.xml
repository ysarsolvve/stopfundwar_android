<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="splash_name">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SearchStyle">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:hint">@string/hint_search_query</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/textColorHint</item>
    </style>
</resources>